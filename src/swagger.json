        "tags": ["Users"],
        "summary":"Create a new user",
        "description":"Cria um novo usuário",
        "requestBody":{
          "content": {
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name":{
                    "type":"string"
                  },
                  "email":{
                    "type":"string"
                  }
                },
                "example":{
                  "name":"Maykon Sousa",
                  "email":"maykon.sousa@hotmail.com"
                }
              }
            }
         }
        }, 
        "responses":{
          "201":{
            "description":"Usuário Criado com sucesso",
            "content":{
              "application/json":{
                "schema":{
                  "type":"Object",
                  "properties":{
                    "admin":{"type":"boolean"},
                    "id":{"type":"string"},
                    "name":{"type":"string"},
                    "email":{"type":"string"},
                    "created_at":{"type":"string"},
                    "updated_at":{"type":"string"}
                  },
                  "example":{
                    "admin": false,
                    "id": "2dfcdbac-dd0a-458f-a547-865100702e27",
                    "name": "Username",
                    "email": "username@username.com",
                    "created_at": "2021-07-07T00:54:09.671Z",
                    "updated_at": "2021-07-07T00:54:09.671Z"
                  }
                }
              }
            }
          },
          "400":{
            "description": "User Already Exists !!!",
